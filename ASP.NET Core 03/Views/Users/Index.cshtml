@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <form asp-action="Index" method="get" class="d-flex mt-2 " role="search">
        <input class="form-control mx-2 w-75" type="search" placeholder="Search" aria-label="Search" name="searchValue" required>
        <button class="btn btn-outline-success " type="submit">Search</button>
    </form>
</div>
<table class="table mt-3 table-bordered table-hover">
    <thead>
        <tr>


            <th scope="col" class="text-center">@Html.DisplayNameFor(e => e.Id)</th>
            <th scope="col" class="text-center">@Html.DisplayNameFor(e => e.FirstName)</th>
            <th scope="col" class="text-center">@Html.DisplayNameFor(e => e.LastName)</th>
            <th scope="col" class="text-center">@Html.DisplayNameFor(e => e.UserName)</th>
            <th scope="col" class="text-center">@Html.DisplayNameFor(e => e.Email)</th>
            <th scope="col" class="text-center">@Html.DisplayNameFor(e => e.Roles)</th>

            <th scope="col" class="text-center">Details</th>

            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>@item.Id</td>
                <td>@item.FirstName</td>

                <td>@item.LastName</td>
                <td>@item.UserName</td>
                <td>@Html.DisplayFor(e => item.Email)</td>

                <td>@string.Join(",", item.Roles)</td>

                <partial name="_ButtonsPartialView" Model="@item.Id">

                </partial>
            </tr>

        }

    </tbody>
</table>



