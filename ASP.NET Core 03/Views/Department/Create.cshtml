@model Department
@{
    ViewData["Title"] = "Create";
}

<h1>Create New Department</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Code"> </label>
        <input  class="form-control" asp-for="Code">
        <span asp-validation-for="Code" class="text-danger"> </span>
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"> </span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfCreation"></label>
        <input  class="form-control" asp-for="DateOfCreation">
        <span asp-validation-for="DateOfCreation" class="text-danger"> </span>
    </div>
    <div class="form-group mt-4">
        <button  type="submit" class="btn btn-outline-primary ">Submit</button>
        <button type="button" class="btn btn-outline-success" asp-action="Index">Back to List</button>
    </div>
</form>