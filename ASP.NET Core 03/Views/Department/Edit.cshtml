@model Department
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit @Model.Name Department</h1>

<form method="post" asp-action="Edit">
    <div class="form-group">
        <label asp-for="Code"> </label>
        <input class="form-control" asp-for="Code">
        <span asp-validation-for="Code" class="text-danger"> </span>
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"> </span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfCreation"></label>
        <input class="form-control" asp-for="DateOfCreation">
        <span asp-validation-for="DateOfCreation" class="text-danger"> </span>
    </div>
    <div class="form-group mt-4">
        <a type="submit" class="btn btn-outline-primary ">Update</a>
        <a type="button" class="btn btn-outline-success" asp-action="Index">Back to List</a>
    </div>
</form>
