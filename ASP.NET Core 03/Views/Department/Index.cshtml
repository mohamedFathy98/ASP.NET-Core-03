@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}
<div>
    <a class="btn btn-outline-primary " asp-action="Create">Create New Department</a>
</div>

@if (Model.Any())
{
    <h1>All Departments</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(d => d.Code)</td>
                <td>@Html.DisplayNameFor(d => d.Name)</td>
                <td>@Html.DisplayNameFor(d => d.DateOfCreation)</td>

                <td>Details</td>
                <td>Edit</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.DateOfCreation</td>

                    <partial name="_ButtonsPartialView" Model="@item.Id.ToString()">

                    </partial>
                    

                </tr>

            }
        </tbody>
    </table>
}
else 
{
    <div class="mt-3 alert-warning"> 
        <h2>No Department</h2>
        <p>Please add <span class="text-danger">Department</span></p>
    </div>
}