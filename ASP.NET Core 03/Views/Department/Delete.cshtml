@model Department
@{
    ViewData["Title"] = "Delete";
}

<h1 class="mt-2"> @Model.Name Delete ? </h1>

<form method="post" asp-action="Delete">
    <div class="ms-2 me-2">
        <label asp-for="Code" class="form-label"></label>
        <input readonly asp-for="Code" class="form-control " placeholder="Code">

    </div>
    <div class="mt-2 ms-2 me-2">
        <label asp-for="Name" class="form-label"></label>
        <input readonly asp-for="Name" class="form-control " placeholder="Name">

    </div>
    <div class="mt-2 ms-2 me-2">
        <label asp-for="DateOfCreation" class="form-label"></label>
        <input readonly asp-for="DateOfCreation" class="form-control ">

    </div>
    <div class="mt-2 ms-2">
        <button class="btn btn-danger" type="submit">Delete</button>
        <a class="btn btn-light ms-2" asp-action="Index">Cancel</a>
    </div>
</form>